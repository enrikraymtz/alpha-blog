<h1>Editar articulo existente</h1>

<% if @article.errors.any? %>
<h3>Los siguientes errores impidieron que se creara el articulo</h3>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
    <%= %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to "Regresar a la lista de articulos", articles_path %>
